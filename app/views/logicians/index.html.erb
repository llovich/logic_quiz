<p id="notice"><%= notice %></p>

<h1>Logicians</h1>
<%= link_to fa_icon('plus', text: "Add New Logician"), new_logician_path, class:"btn btn-warning pull-right" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Drawing</th>
      <th>Name</th>
      <th>Hints 1, 2, 3</th>
      <th>Level</th>
      <th>Bio Text</th>
      <th>Bio Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logicians.each do |logician| %>
      <tr>
        <td><%= image_tag logician.drawing.url(:thumb) %></td>
        <td><%= logician.first_name %> <%= logician.last_name %></td>
        <td>see <%= link_to fa_icon('eye', text: "view"), logician %></td>
        <td><%= logician.difficulty_level %></td>
        <td>see <%= link_to fa_icon('eye', text: "view"), logician %></td>
        <td><%= image_tag logician.photo.url(:thumb) %></td>
        <td><%= link_to fa_icon('eye', text: "view"), logician %></td>
        <td><%= link_to fa_icon('pencil', text:"edit"), edit_logician_path(logician) %></td>
        <td><%= link_to fa_icon('trash', text: "delete"), logician, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

