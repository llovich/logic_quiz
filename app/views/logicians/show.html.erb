<div class="row">
  <div class="col-sm-1"></div>
  <div class="col-sm-10">
  <h1>Logician's Information</h1>
  <%= link_to fa_icon('pencil', text: "edit"), edit_logician_path(@logician) %> |
  <%= link_to fa_icon('arrow-left ', text: "back"), logicians_path %>
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8 well">

      <p id="notice"><%= notice %></p>
      <p>
        <strong>First name:</strong>
        <%= @logician.first_name %>
      </p>

      <p>
        <strong>Last name:</strong>
        <%= @logician.last_name %>
      </p>

      <p>
        <strong>Hint:</strong>
        <%= @logician.hint %>
      </p>

      <p>
        <strong>Drawing:</strong><br>
        <%= image_tag @logician.drawing.url(:medium) %>
      </p>

      <p>
        <strong>Difficulty level:</strong>
        <%= @logician.difficulty_level %>
      </p>

      <p>
        <strong>Bio Text:</strong>
        <%= @logician.bio %>
      </p>

       <p>
        <strong>Bio Photo:</strong><br>
        <%= image_tag @logician.photo.url(:medium) %>
      </p>
    </div>
    <div class="col-sm-2"></div>
  </div>

 </div>
  <div class="col-sm-1"></div>
</div>


